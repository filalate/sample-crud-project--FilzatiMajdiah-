@model IEnumerable<EmployeeAttendanceSystem.Models.Employee>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Manage Employees</h2>
    <a href="@Url.Action("Create", "Employee")" class="btn btn-create">Add Employee</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Employee ID</th>
            <th>Name</th>
            <th>Position</th>
            <th>Department</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.EmployeeId</td>
                <td>@employee.Name</td>
                <td>@employee.Position</td>
                <td>@employee.Department</td>
                <td>@employee.Email</td>
                <td>@employee.Phone</td>
                <td>
                    <a href="@Url.Action("Edit", "Employee", new { id = employee.EmployeeId })" class="btn btn-warning">
                        <i class="fas fa-pencil-alt"></i> Edit
                    </a>
                    <a href="@Url.Action("Delete", "Employee", new { id = employee.EmployeeId })" class="btn btn-danger">
                        <i class="fas fa-trash-alt"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

